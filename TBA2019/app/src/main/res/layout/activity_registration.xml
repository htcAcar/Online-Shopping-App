<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/register_bg">

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Your E-mail Address"
        android:textColor="#94053e"
        android:inputType="textWebEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/passwordTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginBottom="49dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:hint="6-12 Chars, Min 1 Digit"
        android:inputType="textPassword"
        android:textColor="#94053e"
        app:layout_constraintBottom_toBottomOf="@+id/dobTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"
        app:layout_constraintVertical_bias="0.464" />

    <EditText
        android:id="@+id/txtDob"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:textColor="#94053e"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/addressTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dobTextView" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="260dp"
        android:layout_height="51dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="Your Address"
        android:textColor="#94053e"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addressTextView" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="99dp"
        android:text="REGISTER"
        android:textColor="#94053e"
        android:background="@drawable/round_edge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressTextView" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="54dp"
        android:text="Email"
        android:textColor="#94053e"
        app:layout_constraintBottom_toTopOf="@+id/txtEmail"
        app:layout_constraintEnd_toEndOf="@+id/passwordTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginBottom="56dp"
        android:text="Password"
        android:textColor="#94053e"
        app:layout_constraintBottom_toTopOf="@+id/dobTextView"
        app:layout_constraintEnd_toEndOf="@+id/dobTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtPassword"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <TextView
        android:id="@+id/dobTextView"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Date of Birth"
        android:textColor="#94053e"
        app:layout_constraintBottom_toTopOf="@+id/txtDob"
        app:layout_constraintEnd_toEndOf="@+id/addressTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtPassword"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextView" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:text="Address"
        android:textColor="#94053e"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDob" />
</android.support.constraint.ConstraintLayout>